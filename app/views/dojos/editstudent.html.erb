<h2>Edit <%= @students.first_name %><%= @students.last_name %></h2>



<div>
<form action="/dojos/<%= @dojos.id %>/student_update/<%=@students.id%>" method="post">
<input type="hidden" name="_method" value="patch">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<p>first_name</p>
<input type="text" name="first_name" value="<%= @students.first_name%>">
<p>last_name</p>
<input type="text" name="last_name" value="<%= @students.last_name%>">
<p>Email Address</p>
<input type="text" name="email" value="<%= @students.email%>">
<p>Dojo</p>
<select name="dojo" >
  <option value="<%=@dojos.branch%>"><%=@dojos.branch%></option>
  <option value="Dojo Burbank">Dojo Burbank</option>
  <option value="Dojo3">Dojo3</option>
  <option value="Dojo4">Dojo4</option>
</select><br>
<input type="submit" value="update">
</div>
</form>

